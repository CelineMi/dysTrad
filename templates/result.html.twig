{% extends 'base.html.twig' %}

{% block body %}
    <h4>Le texte suivant sera traduit : </h4>
    <p>{{ text }}</p>

    {% for word in arraySentence %}
        {% for letter in word %}
            {% for oneLetter in letter %}
                <div class="letter {{ oneLetter }}"></div>
            {% endfor %}
            <div class="space"></div>
        {% endfor %}
        <div></div>
    {% endfor %}
{% endblock %}
